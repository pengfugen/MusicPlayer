<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/background">
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="390dip"
	    android:orientation="vertical"
	    >
	    <ImageView 
	        android:paddingLeft="5dip"
	        android:paddingTop="10dip"
		    android:layout_width="match_parent"
		    android:layout_height="370dip"
		    android:id="@+id/music_image"
		    android:src="@drawable/lizongsheng"/>
	</LinearLayout>
	<LinearLayout 
	 	android:layout_width="match_parent"
	 	android:layout_height="25dip">
	    <SeekBar 
	        android:id="@+id/process"
	        android:layout_width="match_parent"
	        android:layout_height="15dip"
	        android:thumb="@drawable/sekbar_thumb"/>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <ImageButton 
	        android:id="@+id/btn_favorite"
	        android:layout_width="55dip"
	        android:layout_height="60dip"
	        android:src="@drawable/btn_favorite"
	        android:layout_marginLeft="15dip"/>
	    <ImageButton
	        android:id="@+id/btn_pre"
	        android:layout_width="60dip"
	        android:layout_height="60dip"
	        android:src="@drawable/btn_pre"/>
	    <ImageButton
	        android:id="@+id/btn_play"
	        android:layout_width="60dip"
	        android:layout_height="60dip"
	        android:src="@drawable/play"/>
	    <ImageButton
	        android:id="@+id/btn_next"
	        android:layout_width="60dip"
	        android:layout_height="60dip"
	        android:src="@drawable/btn_next"/>

	    <ImageButton
	        android:id="@+id/btn_repeate"
	        android:layout_width="55dip"
	        android:layout_height="60dip"
	        android:src="@drawable/btn_repeate" />
	</LinearLayout>
</LinearLayout>